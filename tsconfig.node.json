{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": false,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "target": "ES2020"
  },
  "include": ["vite.config.ts", "scripts/**/*"],

  // TODO: couldn't quite get this to work with ts-node understanding the .ts file extensions...
  "ts-node": {
    "esm": true,
    "swc": true
  }
}
